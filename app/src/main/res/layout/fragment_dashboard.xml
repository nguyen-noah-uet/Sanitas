<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_dashboard"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Activity"/>


    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/footprint_fill0_wght400_grad0_opsz24"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.443"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.331"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="218dp"
            android:layout_height="205dp"
            android:src="@drawable/eclipe_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_dashboard" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.153"/>
    <TextView
            android:id="@+id/StepEditText"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:ems="10"
            android:textAlignment="center"
            android:visibility="visible"
            android:gravity="center"
            android:textSize="27sp"
            android:text="Steps: "
            android:textColor="#de9811"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintVertical_bias="0.54"/>

    <View
            android:id="@+id/rectangle_1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_4_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StepEditText"
            app:layout_constraintVertical_bias="0.148" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"/>
    <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:ems="10"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1"
            app:layout_constraintVertical_bias="0.8"/>
    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bpm"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_4"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4"
            app:layout_constraintVertical_bias="0.807" app:layout_constraintTop_toTopOf="@+id/rectangle_4"/>
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cardiology_fill0_wght400_grad0_opsz24"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintTop_toTopOf="@+id/rectangle_4"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_4"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4" app:layout_constraintHorizontal_bias="0.945"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Calories"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1"
            app:layout_constraintVertical_bias="0.15" app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"/>
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/local_fire_department_fill0_wght400_grad0_opsz24"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
            app:layout_constraintHorizontal_bias="0.918"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"/>
    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cal"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1"
            app:layout_constraintVertical_bias="0.82" app:layout_constraintStart_toStartOf="@+id/rectangle_1"
            app:layout_constraintHorizontal_bias="0.929"/>
    <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:ems="10"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_4"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4"
            app:layout_constraintTop_toTopOf="@+id/rectangle_4" app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.8"/>
    <View
            android:id="@+id/rectangle_4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_4_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.106" app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Heart Rate"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/rectangle_4"
            app:layout_constraintTop_toTopOf="@+id/rectangle_4" app:layout_constraintVertical_bias="0.15"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_4" app:layout_constraintHorizontal_bias="0.08"/>

</androidx.constraintlayout.widget.ConstraintLayout>